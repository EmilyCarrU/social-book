/*= @group Elements
---------------------------------------------------------------------- */

/*= @group Typography
---------------------------------------------------------------------- */

body
	font-weight: $font-weight-normal
	line-height: $base-line-height
	background: $color-background
	color: $color-text
	font-feature-settings: 'onum' 1, 'pnum' 1, 'kern' false, 'liga' 1
	margin: 0

.main
	font-size: unit($base-font-size, px)

/*= @group Font Stacks
---------------------------------------------------------------------- */

body,
select,
input,
textarea,
button,
pre
	font-family: $font-family-default

h1,
h2,
h3,
h4,
h5,
h6
	font-family: $font-family-display
	font-weight: normal

em,
cite
	font-family: $font-family-default

blockquote,
figcaption
	font-family: $font-family-caption
	font-style: italic

code,
kbd,
samp
	font-family: $font-family-monospace

/*= @group Headings
---------------------------------------------------------------------- */

h1
	font-weight: $font-weight-semibold
	font-style: normal
	font-size: ms(2, rem)
	line-height: ms(0)
	margin: 0

h2
	font-weight: $font-weight-semibold
	font-style: normal

h3
	font-weight: $font-weight-bold
	font-style: normal
	font-size: ms(1, rem)

h4,
h5,
h6
	font-weight: $font-weight-normal
	font-style: normal


/*= @group Links
---------------------------------------------------------------------- */
// Declared link, visited, hover, active

a
	color: $color-link-default
	text-decoration: none
	word-wrap: break-word
	&:visited
		color: $color-link-visited
	&:hover
		color: $color-link-hover
	&:active
		color: $color-link-active
	&:focus
		color: $color-link-hover
		outline: $color-link-hover thin dotted
		&:hover, &:active
			outline: 0


/*= @group Text Level Elements
---------------------------------------------------------------------- */

// paragraphs have no indents, margins
// paragraph plus paragrap is an indent, everything
// else has no indent as there will be a margin after it.

p
	margin: 0

p + p
	// WORk text-indent base-lh

ul,
ol,
dl
	margin: ms(-2) 0
	padding: 0


ul ul,
ol ol,
dl dl
	margin-left: ms(2)


ul li
	list-style: outside bullet // K, check on this


ol
	counter-reset: li
	padding: 0


ol > li
	// list-style outside decimal
	list-style: none
	position: relative


ol > li:before
	content: counter(li) "." /* Use the counter as content */
	counter-increment: li /* Increment the counter by 1 */
	min-width: ms(4)
	margin-left: ms(5)
	margin-right: ms(-2)
	position: absolute
	text-align: right
	font-feature-settings: "kern" 0, "tnum" 1, "onum" 1, "liga" 1

dl dt
	font-weight: bold

dl dd
	margin: 0 0 ms(0) 0

nav ul,
nav ul li,
nav ol,
nav ol li
	list-style: none
	list-style-type: none
	margin: 0
	padding: 0
	&:before
		content: "" // Remove the tabular hanging-list items

b,
strong,
mark
	font-weight: bold

dfn,
mark
	font-style: italic

ins,
mark
	color: invert($color-highlight)
	background-color: $color-highlight

ins
	text-decoration: none

del
	text-decoration: line-through

abbr
	font-size: 75% // proper small caps aren’t available in Abril yet.
	// font-size-ajust useful here?
	font-feature-settings: "lnum" 1, "pnum" 1, "kern" 0, "liga" 1, "scmp" 1, "c2sc" 1

abbr[title]
dfn[title]
	cursor: help
	border-bottom: 1px dotted

// Position subscript and superscript content without affecting line-height h5bp.com/k
sub,
sup
	font-size: 55%
	line-height: 0
	position: relative
	vertical-align: baseline
	font-feature-settings: "lnum" 1, "pnum" 1

sup
	top: -0.75em
sub
	bottom: -0.25em

/*= @group Embeded Content
---------------------------------------------------------------------- */

img,
embed,
object,
video
	width: 100%

img
	border: 0
	-ms-interpolation-mode: bicubic
	vertical-align: middle

/* Correct overflow displayed oddly in IE9 */
svg:not(root)
	overflow: hidden



/*= @group Figures
---------------------------------------------------------------------- */

figure
	margin: 0


/*= @group Quotes
---------------------------------------------------------------------- */

q
	quotes: "“" "”" "‘" "’"


q:before
	content: open-quote


q:after
	content: close-quote


cite
	font-style: italic


blockquote
	margin: ms(0) 0
	footer
		padding: 0.5em 0 0 1em
		font-style: normal
		strong
			font-weight: normal


/*= @group Code
---------------------------------------------------------------------- */

pre
	white-space: pre
	white-space: pre-wrap
	word-wrap: break-word


code
	padding: 0 ms(-2, em)
	color: $color-code
	background-color: $color-code-background


pre
.code
	color: $color-pre
	background-color: $color-pre-background
//	margin-bottom relative-size(base-lh)
//	padding 1em relative-size(base-lh)


pre code
.code code
	background-color: transparent
	border: none
	padding: 0


.code li
	list-style-type: decimal-leading-zero


/*= @group Tables
---------------------------------------------------------------------- */

table
	border-collapse: collapse
	border-spacing: 0
	font-feature-settings: "lnum" 1, "pnum" 0, "tnum" 1, "kern" 0, "liga" 1, "scmp" 1


td
	vertical-align: top


/*= @group Address
---------------------------------------------------------------------- */

address
	font-style: normal

/*= @group Forms
---------------------------------------------------------------------- */
// From HTML5 Boilerplate

form
	margin: 0

fieldset
	border: 0
	margin: 0
	padding: 0


// Indicate that 'label' will shift focus to the associated form element
label
	cursor: pointer


// 1. Correct color not inheriting in IE6/7/8/9
// 2. Correct alignment displayed oddly in IE6/7
legend
	border: 0
	padding: 0

.ie legend
	margin-left: -7px

// 1. Correct font-size not inheriting in all browsers
// 2. Remove margins in FF3/4 S5 Chrome
// 3. Define consistent vertical alignment display in all browsers
button,
input,
select,
textarea
	font-size: 100%
	margin: 0
	vertical-align: baseline

.ie button, .ie input, .ie select, .ie textarea
	vertical-align: middle

// 1. Define line-height as normal to match FF3/4 (set using !important in the UA stylesheet)
button,
input
	line-height: normal

// 1. Display hand cursor for clickable form elements
// 2. Allow styling of clickable form elements in iOS
// 3. Correct inner spacing displayed oddly in IE7 (doesn't effect IE6)
button,
input[type="button"],
input[type="reset"],
input[type="submit"]
	cursor: pointer
	appearance: button

.ie button,
.ie input[type="button"],
.ie input[type="reset"],
.ie input[type="submit"]
	overflow: visible

// Consistent box sizing and appearance
input[type="checkbox"],
input[type="radio"]
	padding: 0
	box-sizing: border-box

input[type="search"]
	appearance: textfield
	box-sizing: content-box //Okay, this is default, why?

input[type="search"]::-webkit-search-decoration
	appearance: none

// Remove inner padding and border in FF3/4 h5bp.com/l
button-moz-focus-inner,
input-moz-focus-inner
	border: 0
	padding: 0

// 1. Remove default vertical scrollbar in IE6/7/8/9
// 2. Allow only vertical resizing
textarea
	overflow: auto
	vertical-align: top
	resize: vertical