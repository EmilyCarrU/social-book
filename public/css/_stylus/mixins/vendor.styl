// Forces the browser to render animation on the element with hardware acceleration
enable-hardware-acceleration()
	vendor('transform', translate3d(0,0,0), only: webkit) // < iOS6
	vendor('transform', translateZ(0), only: webkit)
	vendor('perspective', 1000, only: webkit)
	vendor('backface-visibility', hidden, only: webkit)

disable-hardware-acceleration()
	vendor('transform', translate3d(none), only: webkit) // < iOS6
	vendor('transform', translateZ(none), only: webkit)
	vendor('perspective', none, only: webkit)
	vendor('backface-visibility', none, only: webkit)

overflow-scrolling()
	vendor('overflow-scrolling', arguments, only: webkit official)

ui()
	vendor('touch-callout', none, only: webkit) // prevent callout to copy image, etc when tap to hold
	vendor('text-size-adjust', none, only: webkit) // prevent webkit from resizing text to fit
	vendor('tap-highlight-color', rgba(0, 0, 0, 0), only: webkit) // make transparent link selection, adjust last value opacity 0 to 1.0
	vendor('user-select', none, only: webkit) // prevent copy paste, to allow, change 'none' to 'text'

at-viewport()
	@css {
		@-webkit-viewport {
			width: device-width;
		}
		@-moz-viewport {
			width: device-width;
		}
		@-ms-viewport {
			width: device-width;
		}
		@-o-viewport {
			width: device-width;
		}
		@viewport {
			width: device-width;
		}
	}