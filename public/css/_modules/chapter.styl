.chapter
  padding: 0
  &:after
    content: ""
    height: 1px
    display: block
    position: relative
    width: 100%
    margin: 0 auto
    background: $color-highlight


.chapter-wrapper // Do in Topcoat module style
  font-size: 1rem
  padding: 1.5em
  @media $breakpoint-mid
    padding-left: 0
    padding-right: 0
  min-height: 5em
  max-width: $content-max-width
  margin: 0 auto
  
.chapter-title
  font-size: 1.25rem