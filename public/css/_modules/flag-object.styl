.flag
	display: table
	width: 100%

.flag-image,
.flag-body
	display: table-cell
	vertical-align: middle
	&.flag--top
		vertical-align: top
	&.flag--bottom
			vertical-align: bottom

.flag-image
	padding-right: 0.5em
	> img
		display: block
	&.flag--reversed
		padding-right: 0
		padding-left: 0.5em

.flag-body
	width: auto