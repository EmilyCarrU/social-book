.comment-list,
.comment-list-action-list,
.comment-list-action,
.comment,
.comment-action-list,
.comment-action,
.comment-form,
.comment-form-action-list,
// .comment-form-action
  list-style-type: none
  margin: 0
  padding: 0

.target--comments
  font-size: 1rem
  margin-left: (-3.75 * var-padding--list-header)
  margin-right: (-3.75 * var-padding--list-header)
  display: block
  .topcoat-list__header
    padding: 0
    text-align: center
    background: none
    h4
      text-transform: lowercase
      font-style: italic
      font-size: 2em
      line-height: 1
  .dive
    background: lighten($color-background, 3)

.comment-list
  display: block
  margin: 0 auto

.comment
  font-size: 1.25em
  padding-left: (3.75 * var-padding--list-header) + 2.5em
  margin-right: (3.75 * var-padding--list-header)
  padding: 2.5em 2.5em 2.5em ((3.75 * var-padding--list-header) + 2.5em)
  margin-bottom: 1px
  border-left: 0.5em solid $color-highlight
  background: lighten($color-background, 3)

.comment-author
  font-weight: normal
  font-size: 1.25em
  margin-left: -1em
  display: block

.comment-time
  font-style: italic
  color: #CCC
  font-feature-settings: "pnum" true

.comment-list-action
  margin: 2em auto
  max-width: 50%
  input
    width: 100%
    display: block

.comment-form
  display: block
  background: lighten($color-background, 3)
  border-bottom: 1px solid $color-highlight
  padding: 2em 0
  margin: 0 auto
  label
    display: block
  input, textarea
    display: block
      width: 100%
      margin-bottom: 1em
      font-size: 1em
      &:focus
        border: none

.topcoat-link
  appearance: none
  background: transparent
  padding: 1em
  border: none