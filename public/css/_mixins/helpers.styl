// HTML5bp Helpers
// ================


// For image replacement
ir()
	border: 0
	font: 0/0 a
	text-shadow: none
	color: transparent
	background-color: transparent

// Hide from both screenreaders and browsers h5bp.com/u
hidden()
	display: none
	visibility: hidden

// Hide only visually, but have it available for screenreaders h5bp.com/v
visuallyhidden()
	border: 0 clip rect(0 0 0 0)
	height: 1px
	margin: -1px
	overflow: hidden
	padding: 0
	position: absolute
	width: 1px
	// Extends the .visuallyhidden class to allow the element to be focusable when navigated to via the keyboard h5bp.com/p
	.focusableactive,
	.focusablefocus
		clip: auto
		height: auto
		margin: 0
		overflow: visible
		position: static
		width: auto

invisible()
	visibility: hidden

// Typographic Helpers
// ===================

.amp
	font-family: $font-family-serif
	// font-weight: $font-weight-regular
	font-style: italic
	font-size: ms(0) // standing in for font-size-adjust
.de-em
	font-family: $font-family-serif
	font-style: italic
	font-weight: $font-weight-light
	font-size: 0.75 * ms(0) // standing in for font-size-adjust
	line-height: 1
.no-break
	white-space: pre
.no-underline
	border-bottom: 0